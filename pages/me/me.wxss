.my-page {
  background: #f6f6f6;
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.my-page .header {
  background: #fff;
  display: flex;
  align-items: center;
  margin-bottom: 22rpx;
}

.my-page .header .user-picture {
  height: 120rpx;
  width: 120rpx;
  border: 1rpx solid transparent;
  border-radius: 50%;
  overflow: hidden;
  margin: 25rpx 40rpx;
}

.my-page .user-name > open-data {
  font-size: 34rpx;
  padding: 0 6rpx;
}

.my-page .user-name::after {
  content: "";
  display: block;
  height: 16rpx;
  width: 100%;
  background: #ffdccf;
  margin-top: -16rpx;
}

button::after {
  border: none;
}

.my-page .header > button {
  margin: 0;
  padding: 0;
  background: transparent;
  color: #f6705a;
  font-size: 28rpx;
  left: 35%;
}

.my-page .menus {
  display: flex;
  flex-direction: column;
  background: #fff;
}

.my-page .menus .menus-Button {
  display: flex;
  justify-content: space-around;
  font-size: 34rpx;
  line-height: 34rpx;
  padding: 23rpx 0 15rpx 0;
}

.my-page .scroll-bar {
  height: 8rpx;
  width: 154rpx;
  display: block;
  border: 1rpx solid #f6705a;
  border-radius: 4rpx;
  background: #f6705a;
  transition: transform 0.6s;
}
.listbox{
  overflow: auto;
  flex: 1;
}