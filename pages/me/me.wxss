.my-page {
  background: #f6f6f6;
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.my-page .header {
  background: #fff;
  display: flex;
  align-items: center;
}

.my-page .header .user-picture {
  height: 120rpx;
  width: 120rpx;
  border: 1rpx solid transparent;
  border-radius: 50%;
  overflow: hidden;
  margin: 25rpx 40rpx;
}

.my-page .user-name > open-data {
  font-size: 34rpx;
  padding: 0 6rpx;
}

.my-page .user-name::after {
  content: "";
  display: block;
  height: 16rpx;
  width: 100%;
  background: #ffdccf;
  margin-top: -16rpx;
}

button::after {
  border: none;
}

.my-page .header > button {
  margin: 0;
  padding: 0;
  background: transparent;
  color: #f6705a;
  font-size: 28rpx;
  left: 35%;
}

.my-page .menus {
  display: flex;
  flex-direction: column;
  background: #fff;
  margin: 22rpx 0;
}

.my-page .menus .menus-button {
  display: flex;
  justify-content: space-around;
  align-items: center;
  line-height: 28rpx;
  padding: 30rpx 0 22rpx 0;
}

.my-page .scroll-bar {
  height: 8rpx;
  width: 154rpx;
  display: block;
  border: 1rpx solid transparent;
  border-radius: 4rpx;
  background: #f6705a;
  transition: transform 0.3s;
}

.listbox {
  display: flex;
  overflow: hidden;
  height: 100%;
}

.history, .finished {
  flex-shrink: 0;
  transition: transform 0.3s;
}

.item {
  border: 2rpx solid #fff;
  margin: 0 30rpx 24rpx 30rpx;
  background: #fff;
  box-shadow: 0px 1px 8px -5px rgba(0, 0, 0, 0.6);
  border-radius: 8rpx;
  overflow: hidden;
}

.item .time {
  font-size: 38rpx;
  font-weight: bold;
  padding: 24rpx 32rpx;
}

.item .content {
  display: flex;
  padding: 0 32rpx;
  padding-bottom: 24rpx;
  word-break: break-all;
}

.item .content text {
  padding-right: 25rpx;
  flex-shrink: 0;
}

.item .content detail {
  flex: 1;
  flex-wrap: wrap;
}
