.set-task {
  position: fixed;
  top: 0;
  width: 100%;
  height: 100vh;
  background-color: rgba(0, 0, 0, 0.5);
}

.set-task .confirm {
  margin: 286rpx 50rpx;
  border: 1px solid transparent;
  background: #fff;
  border-radius: 16rpx;
  justify-content: center;
}

.set-task .form {
  margin: 24rpx;
}

.set-task .textarea {
  height: 120rpx;
  border: 1px solid transparent;
  background: #f2f2f2;
  border-radius: 12rpx;
  width: 100%;
  
}

.set-task .button {
  margin: 24rpx 0;
  display: flex;
  justify-content: space-evenly;
}

.set-task .button > view {
  font-size: 30rpx;
  color: #f6705a;
}

.set-task .button > view:nth-child(3) {
  color: black;
}
